<Window x:Class="GerenciadorEstoques.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Gerenciamento de Estoques" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen" MinWidth="900" MinHeight="600"
        KeyDown="Window_KeyDown" Background="#1E1E1E">

    <Window.Resources>
        <!-- Estilo base para botões -->
        <Style x:Key="BotaoBase" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BotaoVerde" TargetType="Button" BasedOn="{StaticResource BotaoBase}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BotaoAzul" TargetType="Button" BasedOn="{StaticResource BotaoBase}">
            <Setter Property="Background" Value="#2196F3"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BotaoVermelho" TargetType="Button" BasedOn="{StaticResource BotaoBase}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BotaoAmarelo" TargetType="Button" BasedOn="{StaticResource BotaoBase}">
            <Setter Property="Background" Value="#FF9800"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BotaoCinza" TargetType="Button" BasedOn="{StaticResource BotaoBase}">
            <Setter Property="Background" Value="#757575"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BotaoRoxo" TargetType="Button" BasedOn="{StaticResource BotaoBase}">
            <Setter Property="Background" Value="#9C27B0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7B1FA2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo CORRIGIDO para ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" 
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          Focusable="False"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0" Margin="8,5" 
                                                      HorizontalAlignment="Left" 
                                                      VerticalAlignment="Center"
                                                      Content="{TemplateBinding SelectionBoxItem}"/>
                                    <Path Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                          Data="M 0 0 L 4 4 L 8 0 Z" Fill="White"/>
                                </Grid>
                            </ToggleButton>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Border Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="1"
                                        MinWidth="{TemplateBinding ActualWidth}" MaxHeight="200">
                                    <ScrollViewer>
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para ComboBoxItem -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3F3F46"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para Label -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Estilo para GroupBox -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Estilo para Expander -->
        <Style TargetType="Expander">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
        </Style>

        <!-- Estilo para DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="RowBackground" Value="#2D2D30"/>
            <Setter Property="AlternatingRowBackground" Value="#252526"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#1E1E1E"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#094771"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="🛒 Gerenciador de Estoques" 
                           FontSize="20" FontWeight="Bold" Foreground="#E0E0E0"/>
                <TextBlock Text="Sistema completo para mercadinho" 
                           FontSize="10" Foreground="#999" Margin="0,3,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <ComboBox x:Name="cmbFiltroEstoque" Width="140" Height="28" 
                          VerticalContentAlignment="Center" Margin="0,0,8,0"
                          SelectionChanged="CmbFiltroEstoque_SelectionChanged">
                    <ComboBoxItem Content="📦 Todos" IsSelected="True"/>
                    <ComboBoxItem Content="⚠️ Baixo (≤10)"/>
                    <ComboBoxItem Content="❌ Zerado"/>
                    <ComboBoxItem Content="✅ Normal"/>
                </ComboBox>

                <TextBox x:Name="txtBusca" Width="200" Height="28" 
                         VerticalContentAlignment="Center"
                         TextChanged="TxtBusca_TextChanged"/>
                <TextBlock Text="🔍 Buscar..." VerticalAlignment="Center" 
                           Margin="-190,0,0,0" IsHitTestVisible="False" 
                           Foreground="#666" x:Name="txtPlaceholderBusca" FontSize="11"/>
            </StackPanel>
        </Grid>

        <!-- Formulário Compacto -->
        <Expander Grid.Row="1" Header="➕ Cadastro / Edição de Produto" 
                  IsExpanded="True" Foreground="#E0E0E0" Margin="0,0,0,8"
                  Background="#252526" BorderBrush="#3F3F46" BorderThickness="1">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Código:*" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtCodigo" Height="26" 
                         VerticalContentAlignment="Center" MaxLength="20" TabIndex="0"/>

                <Label Grid.Row="0" Grid.Column="3" Content="Nome:*" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="4" x:Name="txtNome" Height="26" 
                         VerticalContentAlignment="Center" MaxLength="100" TabIndex="1"/>

                <Label Grid.Row="0" Grid.Column="6" Content="Categoria:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="0" Grid.Column="7" x:Name="cmbCategoria" Height="26" TabIndex="2">
                    <ComboBoxItem Content="Alimentos" IsSelected="True"/>
                    <ComboBoxItem Content="Bebidas"/>
                    <ComboBoxItem Content="Higiene"/>
                    <ComboBoxItem Content="Limpeza"/>
                    <ComboBoxItem Content="Hortifruti"/>
                    <ComboBoxItem Content="Padaria"/>
                    <ComboBoxItem Content="Frios"/>
                    <ComboBoxItem Content="Congelados"/>
                    <ComboBoxItem Content="Diversos"/>
                </ComboBox>

                <Label Grid.Row="2" Grid.Column="0" Content="Qtd:*" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtQuantidade" Height="26" 
                         VerticalContentAlignment="Center" TabIndex="3" 
                         PreviewTextInput="TxtNumero_PreviewTextInput"/>

                <Label Grid.Row="2" Grid.Column="3" Content="Custo (R$):" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="4" x:Name="txtPrecoCusto" Height="26" 
                         VerticalContentAlignment="Center" TabIndex="4" 
                         PreviewTextInput="TxtDecimal_PreviewTextInput"/>

                <Label Grid.Row="2" Grid.Column="6" Content="Venda (R$):*" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="7" x:Name="txtPreco" Height="26" 
                         VerticalContentAlignment="Center" TabIndex="5" 
                         PreviewTextInput="TxtDecimal_PreviewTextInput"/>

                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="8" 
                            Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnAdicionar" Content="➕ Adicionar" Width="100" Height="30" Padding="8,4"
                            Margin="0,0,6,0" Click="BtnAdicionar_Click" 
                            Style="{StaticResource BotaoVerde}" TabIndex="6"/>
                    <Button x:Name="btnAtualizar" Content="💾 Salvar" Width="90" Height="30" Padding="8,4"
                            Margin="0,0,6,0" Click="BtnAtualizar_Click" 
                            Style="{StaticResource BotaoAzul}" IsEnabled="False" TabIndex="7"/>
                    <Button x:Name="btnCancelar" Content="✖ Limpar" Width="80" Height="30" Padding="8,4"
                            Click="BtnCancelar_Click" 
                            Style="{StaticResource BotaoCinza}" TabIndex="8"/>
                </StackPanel>
            </Grid>
        </Expander>

        <!-- DataGrid Otimizado SEM botões +/- -->
        <Border Grid.Row="2" BorderBrush="#3F3F46" BorderThickness="1" Background="#252526">
            <DataGrid x:Name="dgProdutos" AutoGenerateColumns="False" 
                      SelectionMode="Single" CanUserAddRows="False"
                      SelectionChanged="DgProdutos_SelectionChanged"
                      RowHeight="32" MouseDoubleClick="DgProdutos_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#4FC3F7"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Produto" Binding="{Binding Nome}" Width="*" MinWidth="150"/>

                    <DataGridTextColumn Header="Categoria" Binding="{Binding Categoria}" Width="95">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="10"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Estoque" Binding="{Binding Quantidade}" Width="70">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="13"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Custo" Binding="{Binding PrecoCusto, StringFormat=C2}" Width="75">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Foreground" Value="#FF9800"/>
                                <Setter Property="FontSize" Value="11"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Venda" Binding="{Binding Preco, StringFormat=C2}" Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#4CAF50"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Margem" Binding="{Binding MargemLucro, StringFormat=P0}" Width="65">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="10"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Total" Binding="{Binding ValorTotalVenda, StringFormat=C2}" Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#2196F3"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Header="Ações" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="📥" Width="30" Height="26" Padding="0"
                                            ToolTip="Entrada de Estoque"
                                            Background="#4CAF50" Foreground="White" 
                                            BorderThickness="0" Margin="2,0"
                                            Click="BtnEntradaRapida_Click" Tag="{Binding}" 
                                            FontSize="11" Cursor="Hand"/>
                                    <Button Content="📤" Width="30" Height="26" Padding="0"
                                            ToolTip="Saída de Estoque"
                                            Background="#FF9800" Foreground="White" 
                                            BorderThickness="0" Margin="2,0"
                                            Click="BtnSaidaRapida_Click" Tag="{Binding}" 
                                            FontSize="11" Cursor="Hand"/>
                                    <Button Content="✏" Width="30" Height="26" Padding="0"
                                            ToolTip="Editar (F2)"
                                            Background="#2196F3" Foreground="White" 
                                            BorderThickness="0" Margin="2,0"
                                            Click="BtnEditarRapido_Click" Tag="{Binding}" 
                                            FontSize="11" Cursor="Hand"/>
                                    <Button Content="🗑" Width="30" Height="26" Padding="0"
                                            ToolTip="Remover (Del)"
                                            Background="#F44336" Foreground="White" 
                                            BorderThickness="0" Margin="2,0"
                                            Click="BtnRemoverRapido_Click" Tag="{Binding}" 
                                            FontSize="11" Cursor="Hand"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Rodapé Compacto -->
        <Grid Grid.Row="3" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Border Background="#2D2D30" CornerRadius="3" Padding="10,5" Margin="0,0,6,0" BorderBrush="#3F3F46" BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📦 " FontSize="11" Foreground="#4FC3F7"/>
                        <TextBlock x:Name="txtTotal" Text="0" FontWeight="Bold" Foreground="#4FC3F7" FontSize="11"/>
                    </StackPanel>
                </Border>

                <Border Background="#2D2D30" CornerRadius="3" Padding="10,5" Margin="0,0,6,0" BorderBrush="#3F3F46" BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📊 " FontSize="11" Foreground="#4CAF50"/>
                        <TextBlock x:Name="txtTotalItens" Text="0" FontWeight="Bold" Foreground="#4CAF50" FontSize="11"/>
                    </StackPanel>
                </Border>

                <Border Background="#2D2D30" CornerRadius="3" Padding="10,5" Margin="0,0,6,0" BorderBrush="#3F3F46" BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💰 " FontSize="11" Foreground="#FF9800"/>
                        <TextBlock x:Name="txtValorCusto" Text="R$ 0,00" FontWeight="Bold" Foreground="#FF9800" FontSize="11"/>
                    </StackPanel>
                </Border>

                <Border Background="#2D2D30" CornerRadius="3" Padding="10,5" Margin="0,0,6,0" BorderBrush="#3F3F46" BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💵 " FontSize="11" Foreground="#9C27B0"/>
                        <TextBlock x:Name="txtValorTotal" Text="R$ 0,00" FontWeight="Bold" Foreground="#9C27B0" FontSize="11"/>
                    </StackPanel>
                </Border>

                <Border Background="#2D2D30" CornerRadius="3" Padding="10,5" BorderBrush="#3F3F46" BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📈 " FontSize="11" Foreground="#2196F3"/>
                        <TextBlock x:Name="txtLucroPotencial" Text="R$ 0,00" FontWeight="Bold" Foreground="#2196F3" FontSize="11"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="btnEntrada" Content="📥 Entrada" Width="85" Height="32" Padding="8,4"
                        Margin="0,0,6,0" Click="BtnEntrada_Click" 
                        Style="{StaticResource BotaoVerde}"/>
                <Button x:Name="btnSaida" Content="📤 Saída" Width="80" Height="32" Padding="8,4"
                        Margin="0,0,6,0" Click="BtnSaida_Click" 
                        Style="{StaticResource BotaoAmarelo}"/>
                <Button x:Name="btnRelatorio" Content="📋 Relatório" Width="90" Height="32" Padding="8,4"
                        Margin="0,0,6,0" Click="BtnRelatorio_Click" 
                        Style="{StaticResource BotaoRoxo}"/>
                <Button x:Name="btnExportar" Content="💾 Exportar" Width="90" Height="32" Padding="8,4"
                        Click="BtnExportar_Click" 
                        Style="{StaticResource BotaoAzul}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>