<Window x:Class="GerenciadorEstoques.EntradaSaidaRapidaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movimentação de Estoque" Height="340" Width="420"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#1E1E1E" Loaded="Window_Loaded"
        FocusManager.FocusedElement="{Binding ElementName=txtQuantidade}">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>

        <Style x:Key="BotaoConfirmar" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" Padding="12,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BotaoCancelar" TargetType="Button">
            <Setter Property="Background" Value="#757575"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" Padding="10,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BotaoRapido" TargetType="Button">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" Padding="8,6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505050"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título dinâmico -->
        <Border Grid.Row="0" x:Name="borderTitulo" Background="#4CAF50" 
                CornerRadius="3" Padding="10,8" Margin="0,0,0,12">
            <TextBlock x:Name="txtTitulo" Text="📥 Entrada de Estoque" 
                       FontSize="15" FontWeight="Bold" Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Info do Produto -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Produto:" FontSize="10" Foreground="#999" Margin="0,0,0,3"/>
            <TextBlock x:Name="txtProdutoNome" FontSize="13" FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Estoque Atual -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Estoque Atual:" FontSize="10" Foreground="#999" Margin="0,0,0,3"/>
                <TextBlock x:Name="txtEstoqueAtual" FontSize="18" FontWeight="Bold"/>
            </StackPanel>

            <StackPanel Grid.Column="1" x:Name="panelPreco">
                <TextBlock Text="Preço Unitário:" FontSize="10" Foreground="#999" Margin="0,0,0,3"/>
                <TextBlock x:Name="txtPrecoUnitario" FontSize="18" FontWeight="Bold" Foreground="#4CAF50"/>
            </StackPanel>
        </Grid>

        <!-- Campo de Quantidade -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Quantidade:*" FontSize="10" Foreground="#999" Margin="0,0,0,4"/>
            <TextBox x:Name="txtQuantidade" Height="45" FontSize="20" FontWeight="Bold"
                     VerticalContentAlignment="Center" TextAlignment="Center"
                     PreviewTextInput="TxtNumero_PreviewTextInput"
                     TextChanged="TxtQuantidade_TextChanged"/>
        </StackPanel>

        <!-- Botões Rápidos -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Content="1" Width="45" Height="38" Click="BtnQtdRapida_Click" 
                    Style="{StaticResource BotaoRapido}" Margin="3"/>
            <Button Content="5" Width="45" Height="38" Click="BtnQtdRapida_Click" 
                    Style="{StaticResource BotaoRapido}" Margin="3"/>
            <Button Content="10" Width="45" Height="38" Click="BtnQtdRapida_Click" 
                    Style="{StaticResource BotaoRapido}" Margin="3"/>
            <Button Content="20" Width="45" Height="38" Click="BtnQtdRapida_Click" 
                    Style="{StaticResource BotaoRapido}" Margin="3"/>
            <Button Content="50" Width="45" Height="38" Click="BtnQtdRapida_Click" 
                    Style="{StaticResource BotaoRapido}" Margin="3"/>
        </StackPanel>

        <!-- Valor Total (apenas para saída) -->
        <Border Grid.Row="5" x:Name="borderValorTotal" Background="#2D2D30" 
                CornerRadius="3" Padding="12" Margin="0,0,0,0" Visibility="Collapsed"
                BorderBrush="#3F3F46" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Valor Total da Venda:" FontSize="10" Foreground="#999" 
                           HorizontalAlignment="Center" Margin="0,0,0,4"/>
                <TextBlock x:Name="txtValorTotal" Text="R$ 0,00" 
                           FontSize="22" FontWeight="Bold" Foreground="#2196F3" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Botões de Ação -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="btnConfirmar" Content="✓ Confirmar" Width="120" Height="38" 
                    Click="BtnConfirmar_Click" Style="{StaticResource BotaoConfirmar}"
                    Margin="0,0,8,0"/>
            <Button Content="ESC Cancelar" Width="110" Height="38" 
                    Click="BtnCancelar_Click" Style="{StaticResource BotaoCancelar}"/>
        </StackPanel>
    </Grid>
</Window>